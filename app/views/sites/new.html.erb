<h3>Books</h3>
<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @sites.each do |site| %>
<tr> 
<td>
<%= site.title %>
</td>
<td>
<%= site.body %>
</td>
<td>
	<%#なぜ@siteじゃないのか？？ なぜclassを入れるのか%>
<%= link_to "show", site_path(site.id),class:"show_#{site.id}" %>
<%= link_to "edit", edit_site_path(site.id), class:"edit_#{site.id}" %>
<%= link_to "destroy", site_path(site.id), method: :delete, class:"destroy_#{site.id}" %>

</td>
</tr>  
<% end %>
</tbody>   
</table>


<div class="box2">
<h1>New book</h1>

<%= form_for(@site) do |f| %>

<h4>Title</h4>
<%= f.text_field :title , class:"book_title"%>

<h4>Body</h4>
<%= f.text_area :body, class:"book_body" %>

<%= f.submit '投稿' %>

<% end %>
</div>

